    ufw allow from "$USER_IP" to any port 22
    echo -e "${GREEN}âœ… Ð”Ð¾ÑÑ‚ÑƒÐ¿ Ð¿Ð¾ SSH Ñ€Ð°Ð·Ñ€ÐµÑˆÑ‘Ð½ Ñ $USER_IP.${NC}"
fi
echo -e "${YELLOW}ðŸ’¡ fail2ban Ð°ÐºÑ‚Ð¸Ð²ÐµÐ½: Ð·Ð°Ñ‰Ð¸Ñ‰Ð°ÐµÑ‚ Ð¾Ñ‚ Ð±Ñ€ÑƒÑ‚Ñ„Ð¾Ñ€ÑÐ° Ð¿Ð¾ SSH.${NC}"
