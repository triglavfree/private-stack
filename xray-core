    echo -e "${RED}   Ð˜ÑÐ¿Ð¾Ð»ÑŒÐ·ÑƒÐ¹Ñ‚Ðµ Ð²Ð½ÐµÑˆÐ½Ð¸Ð¹ IP Ñ myip.ru.${NC}"
    exit 1
