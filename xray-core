echo "QR-ÐºÐ¾Ð´:"
echo "$LINK" | qrencode -t ansiutf8
echo
echo "Ð”Ð¾ÑÑ‚ÑƒÐ¿Ð½Ñ‹Ðµ ÐºÐ¾Ð¼Ð°Ð½Ð´Ñ‹:"
echo "cat help"
echo -e "${YELLOW}ðŸ’¡ Ð’ÐºÐ»ÑŽÑ‡Ð¸Ñ‚Ðµ Â«Use Remote DNSÂ» Ð² ÐºÐ»Ð¸ÐµÐ½Ñ‚Ðµ (Hiddify Ð¸ Ð´Ñ€.).${NC}"
echo -e "${YELLOW}ÐŸÑ€Ð¾Ð²ÐµÑ€ÐºÐ° ÑƒÑ‚ÐµÑ‡ÐµÐº: https://dnsleaktest.com${NC}"
