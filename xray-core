    echo -e "${RED}âŒ ÐÐµÐ²ÐµÑ€Ð½Ñ‹Ð¹ Ñ„Ð¾Ñ€Ð¼Ð°Ñ‚ IP-Ð°Ð´Ñ€ÐµÑÐ°.${NC}"
    exit 1
